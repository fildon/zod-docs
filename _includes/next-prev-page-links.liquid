<div class='d-flex flex-justify-between'>
    <div>
        {% if include.previous %}
        <a class='btn' href='{{ include.previous.path }}'>Previous Page: {{ include.previous.title }}</a>
        {% endif %}
    </div>
    <div>
        {% if include.next %}
        <a class='btn' href='{{ include.next.path }}'>Next Page: {{ include.next.title }}</a>
        {% endif %}
    </div>
</div>

<script style='display: none;'>
    class PageLink {
        /** @type {string} */ path
        /** @type {string} */ title
    }

    class IncludeParams {
        /** @type {PageLink} */ previous
        /** @type {PageLink} */ next
    }
</script>